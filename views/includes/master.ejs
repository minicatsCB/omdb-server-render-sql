<div id="<%= movie.id %>">
    <div>
        <div class="row my-3">
            <div class="col-lg-12">
                <h1>
                    <%= movie.title %>
                </h1>
                <img class="w-100 rounded" src="<%= movie.poster %>" alt="movie_poster">
            </div>
            <div class="movie-options col-lg-12" data-key="<%= movie.id %>">
                <div class="my-1">
                    <button class="btn btn-light w-100" type="button">
                        <i class="fas fa-info-circle"></i>
                        <a href="/movie/<%= movie.id %>">View details</a>
                    </button>
                </div>

                <% if(isEditOn === false){ %>
                    <div class="my-1">
                        <button class="btn btn-light w-100" type="button">
                            <i class="fas fa-edit"></i>
                            <a href="/movie/<%= movie.id %>/edit">Edit</a>
                        </button>
                    </div>
                <% } else{ %>
                    <div class="my-1">
                        <button class="btn btn-light w-100" type="submit" form="edit-movie-form">
                            <i class="fas fa-edit"></i>
                            <span>Save</span>
                        </button>
                    </div>
                <% } %>

                <form id="search-movie-form" method="POST" action="/movie/<%= movie.id %>/delete">
                    <div class="my-1">
                        <button class="btn btn-light w-100" type="submit">
                            <i class="fas fa-trash-alt"></i>
                            <span>Delete</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
